alias HomeServer='ssh HomeServer'
alias HomeGit='ssh git@homeserver.local'
alias ls='ls -la --color=auto'
alias v='vim'
alias updatesite='scp -r ~/Repository/Home/kozin.cc/public/* kozin.cc:/var/www/kozin'
alias mv="mv -i"
alias rm="rm -i"
alias mkdir="mkdir -pv"
alias grep='grep --color=auto'

# Automation Stuf
alias karatestaging='mvn test -Dkarate.env=TrackSTAGING -Dkarate.options="--tags ~@bug --tags ~@flaky" -DupdateTestRail=true'
alias dpw='docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:v1.48.2-noble /bin/bash'

# Folders Navigation
alias dwn='cd ~/Downloads'
alias ..="cd .."
alias homerepo='cd ~/Repository/Home'
alias workrepo='cd ~/Repository/Work'
alias pwui='cd ~/Repository/Work/qa-ui-automation'

# Some Random Helpful Stuff
alias myip='curl ipinfo.io/ip'
alias history='history 1'

# Github
alias gp='git pull'

gc() {
	git checkout $1 && git pull
}

gd() {
	git branch -d $1
}

c() {
	local msg="$@"
	git commit -am $msg
}
